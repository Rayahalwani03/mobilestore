<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="mobilestore.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:mobilestore"
    Shell.FlyoutBehavior="Disabled"
    Title="mobilestore">


    <TabBar>

        <Tab Title="MainPage">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>

        </Tab>


        <Tab Title="Store">

            <ShellContent ContentTemplate="{DataTemplate local:Store}" Route="Store"/>

        </Tab>



        <Tab Title="Shop">

            <ShellContent ContentTemplate="{DataTemplate local:Shop}" Route="Shop"/>

        </Tab>



    </TabBar>

</Shell>
